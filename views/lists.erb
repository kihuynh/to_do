<!-- Lists of current lists. -->
<h1>Your Current Lists</h1>

<% if @lists.any?() %>
  <h3>Here are your lists</h3>
  <ul>
    <% @lists.each() do |list| %>
      <li><a href="/lists/<%= list.id() %>"><%= list.name() %></li>
    <% end %>
  </ul>
  <% else %>
    <p>There are no lists yet!</p>
  <% end %>

  <a href="/"><button class="btn">Back to Home</a>
